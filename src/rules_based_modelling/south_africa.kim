 #                            | #                                          | nca.ecoregion:AlbanyThicket                  | #   				|  nca.ecosystem.iucn:TropicalSubtropicalDryForestThicket      , 
 #                            | #                                          | nca.ecoregion:AlbanyThicket                  | #   				|  nca.ecosystem.iucn:TropicalSubtropicalDryForestThicket      , 
